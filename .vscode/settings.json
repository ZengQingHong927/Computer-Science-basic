{
  "editor.fontSize": 14,
  // tab 大小为2个空格
  "editor.tabSize": 8,
  // 编辑器换行
  "editor.wordWrap": "off",
  // 开启 vscode 文件路径导航
  "breadcrumbs.enabled": false,
  // 添加 react 支持
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "react",
      "autoFix": true
    }
  ],
  "workbench.iconTheme": "vscode-icons",
  "eslint.autoFixOnSave": true,
}